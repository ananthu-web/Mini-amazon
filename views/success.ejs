<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Completed</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    body {
      background: linear-gradient(135deg, #ffecd2, #fcb69f, #a6c1ee, #fbc2eb);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
    }
    .card {
      background: white;
      border-radius: 25px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.2);
      padding: 50px 30px;
      text-align: center;
      max-width: 500px;
      width: 100%;
      animation: bounceIn 0.8s ease-out;
    }
    h1 {
      color: #28a745;

      font-size: 3rem;font-weight: bolder;
      margin-bottom: 20px;
      opacity: 0;
      animation: fadeIn 1s forwards 0.5s;
    }
    p {
      font-size: 1.2rem;
      color: #555;
      margin-bottom: 20px;
      opacity: 0;
      animation: fadeIn 1s forwards 1s;
    }
    .btn-home {
      background: #ff7e5f;
      color: white;
      border-radius: 50px;
      padding: 12px 35px;
      font-weight: bold;
      transition: 0.3s;
      opacity: 0;
      animation: fadeIn 1s forwards 1.5s;
    }
    .btn-home:hover {
      background: #feb47b;
    }

    /* Animations */
    @keyframes bounceIn {
      0% { transform: scale(0.5); opacity: 0; }
      60% { transform: scale(1.1); opacity: 1; }
      100% { transform: scale(1); }
    }

    @keyframes fadeIn {
      to { opacity: 1; }
    }

    /* Confetti */
    .confetti {
      position: fixed;
      width: 10px;
      height: 10px;
      background: randomColor();
      top: -10px;
      animation: fall linear forwards;
    }
    @keyframes fall {
      to { transform: translateY(100vh) rotate(360deg); }
    }

  </style>
</head>
<body>
  <div class="card">
    <h1>ðŸŽ‰ Success!</h1>
    <p>Your order has been placed successfully.</p>
    <p>Thank you for shopping with Mini Amazon. Your items will be delivered soon.</p>
    <a href="/" class="btn btn-home">Back to Home</a>
  </div>

  <!-- Confetti JS -->
  <script>
    function randomColor() {
      const colors = ["#ff595e","#ffca3a","#8ac926","#1982c4","#6a4c93"];
      return colors[Math.floor(Math.random() * colors.length)];
    }

    function createConfetti() {
      const confetti = document.createElement('div');
      confetti.classList.add('confetti');
      confetti.style.left = Math.random() * window.innerWidth + 'px';
      confetti.style.background = randomColor();
      confetti.style.width = Math.random() * 8 + 4 + 'px';
      confetti.style.height = confetti.style.width;
      confetti.style.animationDuration = Math.random() * 3 + 2 + 's';
      document.body.appendChild(confetti);

      setTimeout(() => {
        confetti.remove();
      }, 5000);
    }

    setInterval(createConfetti, 150);
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
